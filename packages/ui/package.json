{
  "name": "@prefabs.tech/react-ui",
  "version": "0.71.0",
  "description": "React UI Component Library",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/PrefabsTechReactUI.es.js",
      "require": "./dist/PrefabsTechReactUI.umd.js"
    },
    "./dist/PrefabsTechReactUI.css": "./dist/react-ui.css"
  },
  "main": "./dist/PrefabsTechReactUI.umd.js",
  "module": "./dist/PrefabsTechReactUI.es.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "snapshot:update": "vitest --environment jsdom run --update",
    "sort-package": "npx sort-package-json",
    "test": "vitest --environment jsdom run --coverage",
    "test:component": "vitest --environment jsdom run component/",
    "test:snapshot": "vitest --environment jsdom run snapshot/",
    "test:unit": "vitest --environment jsdom run unit/",
    "typecheck": "tsc --noEmit -p tsconfig.vitest.json --composite false"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@tanstack/react-table": "8.21.3",
    "file-saver": "2.0.5",
    "node-xlsx": "0.24.0",
    "react-debounce-input": "3.3.0",
    "react-popper": "^2.3.0"
  },
  "devDependencies": {
    "@dzangolab/flag-icon-css": "3.4.5",
    "@prefabs.tech/eslint-config": "github:prefabs-tech/tools#feat/react-eslint-9&path:packages/eslint-config",
    "@prefabs.tech/tsconfig": "0.2.1",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.3.0",
    "@types/file-saver": "2.0.7",
    "@types/jsdom": "21.1.7",
    "@types/node": "24.10.1",
    "@types/react": "18.3.20",
    "@types/react-dom": "18.3.6",
    "@vitejs/plugin-react": "4.4.1",
    "@vitest/coverage-v8": "3.0.8",
    "eslint": "9.39.2",
    "jsdom": "25.0.1",
    "prettier": "3.8.1",
    "primereact": "9.6.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-router-dom": "6.28.0",
    "typescript": "5.7.3",
    "vite": "6.4.1",
    "vitest": "3.0.8"
  },
  "peerDependencies": {
    "primereact": "9.6.1",
    "react": ">=18.2",
    "react-dom": ">=18.2",
    "react-router-dom": ">=6.9"
  },
  "engines": {
    "node": ">=18"
  }
}
